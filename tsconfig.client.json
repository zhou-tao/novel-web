{
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",

    /* Lint */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* module */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,

    "types": ["vite/client"],
    "paths": {
      "@/*": ["src/*"],
      "@c/*": ["src/components/*"],
      "@h/*": ["src/hooks/*"],
      "#/*": ["types/*"]
    }
  },
  "include": [
    "app/client/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}